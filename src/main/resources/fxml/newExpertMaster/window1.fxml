<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ru.aofoms.util.MaskField?>

<AnchorPane prefHeight="365.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.aofoms.controller.newExpertMaster.Window1Controller">
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
    <VBox prefHeight="365.0" prefWidth="350.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox prefHeight="55.0" prefWidth="330.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <Label prefHeight="25.0" text="Реестровый номер" />
            <MaskField fx:id="numberField" mask="28DDDDD" />
        </VBox>
        <VBox prefHeight="55.0" prefWidth="330.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <Label prefHeight="25.0" text="Фамилия" />
            <TextField fx:id="surnameField" />
        </VBox>
        <VBox prefHeight="55.0" prefWidth="330.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <Label prefHeight="25.0" text="Имя" />
            <TextField fx:id="nameField" />
        </VBox>
        <VBox prefHeight="55.0" prefWidth="330.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <Label prefHeight="25.0" text="Отчество" />
            <TextField fx:id="patronymicField" />
        </VBox>
        <VBox prefHeight="55.0" prefWidth="330.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <Label prefHeight="25.0" text="СНИЛС" />
            <MaskField fx:id="snilsField" mask="DDD-DDD-DDD DD" />
        </VBox>
        <VBox prefHeight="55.0" prefWidth="330.0">
            <padding>
                <Insets top="5.0" />
            </padding>
            <Label prefHeight="25.0" text="Дополнительная информация" disable="true" />
            <TextField fx:id="info" disable="true" />
        </VBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="330.0" spacing="5.0">
            <Button mnemonicParsing="false" onAction="#cancel" prefWidth="60.0" text="Отмена" />
            <Button mnemonicParsing="false" onAction="#next" prefWidth="60.0" text="Далее" />
        </HBox>
    </VBox>

</AnchorPane>
