<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="175.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.aofoms.controller.UserController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <VBox layoutX="30.0" layoutY="30.0" prefHeight="165.0" prefWidth="480.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox prefHeight="50.0" prefWidth="460.0" spacing="5.0">
            <VBox prefHeight="50.0" prefWidth="150.0">
                <Label prefHeight="25.0" text="Фамилия" />
                <TextField fx:id="surnameField" />
            </VBox>
            <VBox prefHeight="50.0" prefWidth="150.0">
                <Label prefHeight="25.0" text="Имя" />
                <TextField fx:id="nameField" />
            </VBox>
            <VBox prefHeight="50.0" prefWidth="150.0">
                <Label prefHeight="25.0" text="Отчество" />
                <TextField fx:id="patronymicField" />
            </VBox>
        </HBox>
        <HBox prefHeight="50.0" prefWidth="460.0" spacing="10.0">
            <VBox prefHeight="200.0" prefWidth="225.0">
                <Label prefHeight="25.0" text="Логин" />
                <TextField fx:id="loginField" />
            </VBox>
            <VBox prefHeight="200.0" prefWidth="225.0">
                <Label prefHeight="25.0" text="Пароль" />
                <PasswordField fx:id="passwordField" />
            </VBox>
        </HBox>
        <HBox prefHeight="25.0" prefWidth="460.0" spacing="10.0">
            <CheckBox fx:id="activeCheck" mnemonicParsing="false" prefHeight="25.0" selected="true" text="Пользователь активный" />
        </HBox>
        <HBox alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="460.0" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#cancel" prefWidth="75.0" text="Отмена" />
            <Button mnemonicParsing="false" onAction="#ok" prefWidth="75.0" text="Сохранить" />
        </HBox>
    </VBox>
</AnchorPane>
